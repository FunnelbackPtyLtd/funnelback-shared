<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<Configure class="org.eclipse.jetty.webapp.WebAppContext">
    <New id="userSaltMap" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg></Arg>  <!-- Empty arg here means global to JVM accoding to http://www.eclipse.org/jetty/documentation/current/using-jetty-jndi.html -->
        <Arg>java:comp/env/userSaltMap</Arg>
        <Arg>
            <New class="java.util.concurrent.ConcurrentHashMap"></New>
        </Arg>
    </New>
</Configure>
