<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ehcache.xsd"
	updateCheck="false">
	<diskStore path="java.io.tmpdir" />
	<defaultCache maxElementsInMemory="5000" eternal="true" overflowToDisk="false" statistics="true" />

	<!-- Cache for collection configs -->
	<cache name="localConfigRepository" maxElementsInMemory="10000" eternal="true" overflowToDisk="false" statistics="true" />

	<!-- Cache for index data -->
	<cache name="localIndexRepository" maxElementsInMemory="10000" eternal="true" overflowToDisk="false" statistics="true" />

	<!-- Cache for parsed configuration files -->
	<cache name="localConfigFilesRepository" maxElementsInMemory="10000" eternal="true" overflowToDisk="false" statistics="true" />

	<!-- Cache for IncludeUrl form directive -->
	<cache name="IncludeUrlInternal" eternal="true" maxElementsInMemory="5000" overflowToDisk="true" diskPersistent="true" statistics="true" />

	<!-- Cache for DefaultImageFetcher -->
	<cache name="DefaultImageFetcherRepository" eternal="true" maxElementsInMemory="50" overflowToDisk="true" diskPersistent="true" statistics="true" />

	<!-- Cache for DefaultImageScaler -->
	<cache name="DefaultImageScalerRepository" eternal="true" maxElementsInMemory="50" overflowToDisk="true" diskPersistent="true" statistics="true" />

	<!-- Cache for PreviewController -->
	<cache name="DefaultUrlRendererRepository" eternal="true" maxElementsInMemory="50" overflowToDisk="true" diskPersistent="true" statistics="true" />

</ehcache>