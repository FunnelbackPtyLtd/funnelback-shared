<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	
	<display-name>Funnelback Public UI</display-name>

	<!-- begin SPRING setup -->
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>publicui.root</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext.xml</param-value>
	</context-param>
	
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>file:${funnelback.installdir}/web/conf/modernui/log4j.properties</param-value>
	</context-param>

	<context-param>
		<param-name>log4jExposeWebAppRoot</param-name>
		<param-value>false</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

 	<servlet>
        <servlet-name>recommender</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>recommender</servlet-name>
        <url-pattern>/recommender/similarItems.json</url-pattern>
        <url-pattern>/recommender/itemEntry.html</url-pattern>
        <url-pattern>/recommender/searchRecommendations.html</url-pattern>
        <url-pattern>/recommender/sessions.html</url-pattern>
        <url-pattern>/recommender/queryEntry.html</url-pattern>
        <url-pattern>/recommender/explore.json</url-pattern>
    </servlet-mapping>
    
	<servlet>
		<servlet-name>publicui</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>publicui</servlet-name>
        <url-pattern>/</url-pattern>
		<url-pattern>/search.html</url-pattern>
		<url-pattern>/search.json</url-pattern>
		<url-pattern>/search.classic</url-pattern>
		<url-pattern>/search.xml</url-pattern>
		<url-pattern>/open-search.xml</url-pattern>
		<url-pattern>/suggest.json</url-pattern>
		<url-pattern>/anchors.html</url-pattern>
		<url-pattern>/content-optimiser/*</url-pattern>
        <url-pattern>/filecopy.document</url-pattern>
        <url-pattern>/trim.document</url-pattern>
        <url-pattern>/trim.reference</url-pattern>
        <url-pattern>/cache.*</url-pattern>
        <url-pattern>/log</url-pattern>
        <url-pattern>/redirect</url-pattern>
        <url-pattern>/scale</url-pattern>
        <url-pattern>/padre-sw.cgi</url-pattern>
        <url-pattern>/preview</url-pattern>
        <url-pattern>/resources/*</url-pattern>
        <url-pattern>/search-history.json</url-pattern>
        <url-pattern>/click-history.json</url-pattern>
        <url-pattern>/click-process.*</url-pattern>
        <url-pattern>/cart.json</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>encodingFilter</filter-name>
    	<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    	<init-param>
	        <param-name>encoding</param-name>
        	<param-value>UTF-8</param-value>
    	</init-param>
    	<init-param>
        	<param-name>forceEncoding</param-name>
        	<param-value>true</param-value>
    	</init-param>
   	</filter>
	<filter-mapping>
	   <filter-name>encodingFilter</filter-name>
	   <servlet-name>publicui</servlet-name>
	</filter-mapping>	
	<!-- end SPRING setup -->

	<!-- CGI transforms filter -->
	<filter>
	   <filter-name>RequestParametersTransformFilter</filter-name>
	   <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
	   <filter-name>RequestParametersTransformFilter</filter-name>
	   <servlet-name>publicui</servlet-name>
	</filter-mapping>

	<!-- dns_aliases.cfg restriction filter -->
	<filter>
	   <filter-name>HostnameRestrictionFilter</filter-name>
	   <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
	   <filter-name>HostnameRestrictionFilter</filter-name>
	   <servlet-name>publicui</servlet-name>
	</filter-mapping>
	
	<!-- ==== Authentication filter for Windows ==== -->
	<filter>
		<filter-name>ConfigurableSecurityFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetFilterLifecycle</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>impersonate</param-name>
			<param-value>true</param-value>
		</init-param> 
		<init-param>
			<param-name>allowGuestLogin</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>ConfigurableSecurityFilter</filter-name>
		<url-pattern>/*</url-pattern> 
	</filter-mapping>
	<!--  ========================================== -->
	
	<!-- Yammer metrics  -->
	<filter>
    	<filter-name>webappMetricsFilter</filter-name>
    	<filter-class>com.yammer.metrics.web.DefaultWebappMetricsFilter</filter-class>
	</filter>
	<filter-mapping>
	    <filter-name>webappMetricsFilter</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>

	<!--	
	<servlet>
		<servlet-name>yammerMetricsAdmin</servlet-name>
		<servlet-class>com.yammer.metrics.reporting.AdminServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>yammerMetricsAdmin</servlet-name>
		<url-pattern>/metrics/*</url-pattern>
	</servlet-mapping>
	-->
	
	
</web-app>