<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="robots" content="nofollow" />
	<link rel="stylesheet" media="screen" href="css/search.css" type="text/css" />
	
	
	
	<title>Funnelback Search</title>

	<style type="text/css">
		li.even h3 {
			border: solid 2px #dddddd;
		}
	</style>

</head>

<body>

	
    {.section response}
    {.or}
	<!-- NO QUERY SPECIFIED -->
	<div id="fb-initial">
		<a href="http://funnelback.com/"><img src="img/funnelback.png" alt="Funnelback logo"></a>
	</div>
    {.end}
	
	<!-- SEARCH LOGO -->
	<div><a id="fb-logo" {.section response}{.or}class="fb-initial"{.end} href="http://funnelback.com/"><img	src="img/funnelback-small.png" alt="Funnelback logo" width="170" height="36"></a></div>
	
	<!-- QUERY FORM -->
	
	<div id="fb-queryform" {.section response}{.or}class="fb-initial"{.end}>
		<form method="GET">
			<div>
				<label for="query" style="text-indent: -9999em;">Search</label>
				<input name="query" id="query" type="text" value="{.section question}{query}{.end}" accesskey="q" />
				<input type="submit" value="Search" />
			
				<input type="hidden" name="collection" value="shakespeare-lear" />
				<input type="hidden" name="profile" value="_default" />
			</div>
		</form>
	</div>

	{.section response}		
		{.section resultPacket}
		
			<p id="fb-matching">
				<span id="fb-utils">
					<a href="#" id="fb-advanced-toggle">Advanced search</a>
					<span id="fb-help">| <a href="/search/help/simple_search.html">Help</a></span>
				</span>
		
                {.section resultsSummary}
                    {.section totalMatching} 
				        <span class="fb-result-count" id="fb-page-start">{resultsSummary.currStart}</span> -
				        <span class="fb-result-count" id="fb-page-end">{resultsSummary.currEnd}</span> of
				        <span class="fb-result-count" id="fb-total-matching">{resultsSummary.totalMatching}</span>
				        search results 
                    {.or}
			            <span class="fb-result-count" id="fb-total-matching">0</span> search results
                    {.end}
                {.end}
                for <strong>{query}</strong>
                
                {.section resultsSummary}
                    {.section partiallyMatching}
			            where
            			<span class="fb-result-count" id="fb-fully-matching">
			            	{fullyMatching}
			            </span>
			            match all words and
			            <span class="fb-result-count" id="fb-partially-matching">
				            {@}
			            </span>
			            match some words.
                    {.end}
                {.end}
			</p>		
			
			<div id="fb-wrapper">
			
					<!-- RESULTS SUMMARY -->
					<div id="fb-summary">
	
						{.section spell}
							<!-- Did you mean...? -->
							<span id="fb-spelling">
								Did you mean
								<a href="{url}">{text}</a> ?
							</span>
						{.end}
		
						<!-- TIER BARS -->
					</div>
					
					<!-- FEATURED PAGES (BEST BETS) -->
					{.repeated section bestBets}
						<div class="fb-best-bet">
							{.section title}<h3><a href="{link}">{title|boldicize}</a></h3>{.end}
							{.section description}<p>{description|boldicize}</p>{.end}
							{.section link}<p><cite>{link}</cite></p>{.end}
							{.section title}{.or}<p><strong>{trigger}:</strong> <a href="{link}">{link}</a>{.end}
						</div>
					{.end}
	
					<!-- RESULTS -->
					<ol id="fb-results">
					
						{.repeated section results}
							<!-- EACH RESULT -->
							<li class="result">
								<h3>
									{.section fileType}
										{.eq.html?}
										{.or}
											<span class="fb-filetype fb-{fileType}">[{fileType|upper}]</span>
										{.end}
									{.end}
									<a href="{displayUrl}" title="{liveUrl}">{title|boldicize}</a>
								</h3>
					
								{.section fileType}
									{.eq.pdf?}<p class="fb-file-format"><span>{fileSize|filesize} - PDF</span>
									<a class="fb-cached" href="{cacheUrl}" title="View '{title}' as HTML">View as HTML</a></p>{.end}
									{.eq.doc?}<p class="fb-file-format"><span>{fileSize|filesize} - Microsoft Word</span>
									<a class="fb-cached" href="{cacheUrl}" title="View '{title}' as HTML">View as HTML</a></p>{.end}
									{.eq.xls?}<p class="fb-file-format"><span>{fileSize|filesize} - Microsoft Excel</span>
									<a class="fb-cached" href="{cacheUrl}" title="View '{title}' as HTML">View as HTML</a></p>{.end}
									{.eq.ppt?}<p class="fb-file-format"><span>{fileSize|filesize} - Microsoft Powerpoint</span>
									<a class="fb-cached" href="{cacheUrl}" title="View '{title}' as HTML">View as HTML</a></p>{.end}
								{.end}
								
								<!-- QUERY BIASED SUMMARY (WITH DATE)-->
								<p>
									<span class="fb-date">{date|date}</span>
									<span class="fb-summary">{summary}</span>
								</p>
					
								<!-- METADATA SUMMARIES -->
								{.section metaData}
									{.section c}<p>{c}</p>{.end}
									{.section a}<span class="fb-meta author"><span>by </span> {a}</span>{.end}
									{.section s}<span class="fb-meta keywords"><span>Keywords:</span> {s}</span>{.end}
									{.section p}<span class="fb-meta publisher"><span>Publisher:</span> {p}</span>{.end}
								{.end}
					
								<!-- URL AND FILESIZE -->
								<p>
									<cite>{liveUrl|cut.http://|trunc.75}</cite>
									{.section fileType}
										{.regexp.^(?!(pdf|doc|xls|ppt))?}
											- <a class="fb-cached" href="{cacheUrl}" title="Cached version of {title}">Cached</a>
										{.end}
									{.end}
									
									<!-- EXPLORE LINKS -->
									<a class="fb-explore" href="?collection={collection}&amp;query=explore:{liveUrl}">Explore</a>
								</p>
					
					
								<!-- QUICKLINKS -->
							</li>
						{.or}
								<!-- NO RESULTS -->
								<li id="fb-no-results">Your search for <strong></strong> did not return any results. <span>Please ensure that you:</span>
									<ul>
										<li>are not using any advanced search operators like + - | " etc.</li> 
										<li>expect this document to exist within the collection <em>{details.collectionSize}</em></li>
										<li>have permission to see any documents that may match your query</li>
									</ul>
								</li>
						{.end}
						
						{.section resultsSummary}
							<p class="fb-page-nav">
								{.section prevLink}
									[ <a href="{@}" class="fb-previous-result-page fb-page-nav">Prev {numRanks}</a> ]
								{.end}

								{.repeated section pageLinks}
									{@index}
									{.section current}
										<span class=\"fb-current-result-page\">{page}</span>
									{.or}
										<a href="{link}">{page}</a>
									{.end}
								{.end}

								{.section nextLink}
									[ <a href="{@}" class="fb-next-result-page fb-page-nav">Next {numRanks}</a> ]
								{.end}
							</p>
						{.end}
					
					</ol> 
			</div>
		{.end}		
	{.end}
  
</body>
</html>
