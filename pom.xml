<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.funnelback.publicui</groupId>
	<artifactId>publicui-parent</artifactId>
	<packaging>pom</packaging>
	<name>Modern UI for Funnelback - Parent</name>

	<parent>
		<groupId>com.funnelback</groupId>
		<artifactId>java-parent</artifactId>
		<version>15.5.1616-SNAPSHOT</version>
		<relativePath></relativePath>
	</parent>
 
	<issueManagement>
		<system>JIRA</system>
		<url>https://jira.cbr.au.funnelback.com/browse/FUN</url>
	</issueManagement>
	<ciManagement>
		<system>Jenkins</system>
		<url>http://jenkins.cbr.au.funnelback.com/job/funnelback-publicui</url>
	</ciManagement>
	<inceptionYear>2011</inceptionYear>
	<scm>
		<connection>scm:svn:https://svn.cbr.au.funnelback.com/svn/enterprise-search/trunk/java/publicui</connection>
		<developerConnection>scm:svn:https://svn.cbr.au.funnelback.com/svn/enterprise-search/trunk/java/publicui</developerConnection>
		<tag>HEAD</tag>
		<url>http://svn.cbr.au.funnelback.com/websvn/listing.php?repname=enterprise-search&amp;path=/trunk/java/publicui/</url>
	</scm>
	<organization>
		<name>Funnelback</name>
		<url>http://www.funnelback.com/</url>
	</organization>

	<modules>
		<module>publicui-web</module>
		<module>publicui-core</module>
		<module>publicui-doc</module>
		<module>publicui-form-converter</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-checkstyle-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.thoughtworks.xstream</groupId>
				<artifactId>xstream</artifactId>
				<version>1.4.7</version>
			</dependency>
			<dependency>
				<groupId>com.funnelback</groupId>
				<artifactId>funnelback-common</artifactId>
				<version>${project.version}</version>
				<exclusions>
					<exclusion>
						<groupId>org.apache.tika</groupId>
						<artifactId>tika-core</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.apache.tika</groupId>
						<artifactId>tika-parsers</artifactId>
					</exclusion>
					<exclusion>
						<groupId>cc.mallet</groupId>
						<artifactId>mallet</artifactId>
					</exclusion>
					<exclusion>
						<groupId>com.funnelback</groupId>
						<artifactId>funnelback-squiz-api</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>com.h2database</groupId>
				<artifactId>h2</artifactId>
				<version>1.3.171</version>
				<scope>runtime</scope>
			</dependency>
            <dependency>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-core</artifactId>
                <version>2.0.5</version>
            </dependency>
		</dependencies>
	</dependencyManagement>

</project>
