				<scope>runtime</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<profiles>
		<profile>
			<id>installers</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>2.2</version>
						<configuration>
							<includeScope>runtime</includeScope>
							<excludeScope>provided</excludeScope>
							<outputFile>${project.build.directory}/dependency/${project.artifactId}.classpath</outputFile>
							<!-- Always output unix-style classpath by convention. The installer will convert it to a Windows one if necessary -->
							<fileSeparator>/</fileSeparator>
							<pathSeparator>:</pathSeparator>
							<prefix>$SEARCH_HOME/lib/java/publicui</prefix>
						</configuration>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>copy-dependencies</goal>
									<goal>build-classpath</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>


</project>
